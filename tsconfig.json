{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "rootDirs": ["./src"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
 "include": ["**/*"],
  "exclude": ["node_modules"],
  
}